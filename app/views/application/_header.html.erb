<div class='container-fluid header'>
    <div class='logo'>
                <img src='/images/logo.png' width='175px' height='225px'>
    </div>
    <div class='school-name'>
                <h1 class='glow'><span class='red-text'>Van Houston</span> Academy</h1>
    </div>
    <div class='vanhouston-quotes'>
         <h4><span class='gray-text'>A Transforming After School Program, Inspired by </span><span class='ivy-league red-text'>Stanford</span><span class='gray-text'> and </span><span class='ivy-league red-text'>Harvard</span></h4>
    </div>



    <div class='container limit-quote'>
        <h3 class='h2'>Don't Limit Your Children's Dreams.<br /> <span class='future red-text glowtwo'>Pave Their Future.</span></h3>
    </div>

    <div class='enroll-btn'>

          <a onClick="$('#new-student').modal()" href="#" class='btn btn-default btn-enroll'>Enroll Now</a>
    </div>

</div>

<div class="modal fade" id ='new-student' tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Sign In</h4>
      </div>
      <div class="modal-body sign-in-page">

        <h1>Add New Student</h1>
              <%= form_for Student.new, :html => {:class => "form-group"} do |f| %>

                  <%= f.text_field :first_name, placeholder: "First Name", :html => {:class => "form-control"}%><br />

                  <%= f.text_field :last_name, placeholder: "Last Name", :html => {:class => "form-control"}%><br />

                  <%= f.text_field :parent_first_name, placeholder: "Parent's First Name", :html => {:class => "form-control"}%><br />

                  <%= f.text_field :parent_last_name, placeholder: "Parent's Last Name", :html => {:class => "form-control"}%><br />

                  <%= f.text_field :email, placeholder: "Email", :html => {:class => "form-control"}%><br />

                  <%= f.text_field :current_school, placeholder: "Current School", :html => {:class => "form-control"}%><br />

                  <%= f.collection_select :grade_level, Student::GRADE, :to_s, :to_s, :include_blank => true, placeholder: "Grade Level", :html => {:class => "form-control"}%><br />

                  <%= f.file_field :photo, :html => {:class => "form-control"}%>

                  <%= f.submit "Enroll", :html => {:class => "form-control"}%>
                  
              <% end %>

        </div>

      </div>
    </div>
  </div>
