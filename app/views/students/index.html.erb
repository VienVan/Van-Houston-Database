
<div class='student-show-page'>


  <%= form_tag(students_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Students" %>
  <%= submit_tag "Search" %>
  <% end %>


</div>

<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Parent's Name</th>
      <th>Current School</th>
      <th>Grade Level</th>
      <th>Email</th>

    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
    <tr>
      <th scope='row'><%=student.id%></th>
      <td><%=student.first_name%></td>
      <td><%=student.last_name%></td>
      <td><%=student.parent_first_name+ ' '+student.parent_last_name%></td>
      <td><%=student.current_school%></td>
      <td><%=student.grade_level%></td>
      <td><%=student.email%></td>
    </tr>
    <% end %>
  </tbody>
</table>
