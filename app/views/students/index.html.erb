
<div class='student-show-page'>


  <%= form_tag(students_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Students" %>
  <%= submit_tag "Search", :class => "btn btn-warning btn-group"%>
  <% end %>
  <%= link_to 'Back', :back, :class => "btn btn-default" %>

  <button type="button" class="btn btn-info btn-group" data-toggle="modal" data-target="#new-student">
    New Student
  </button>

</div>



<table class="table table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Parent's Name</th>
      <th>Current School</th>
      <th>Grade Level</th>
      <th>Email</th>
      <th>Edit</th>
      <th>Teacher</th>

    </tr>
  </thead>
  <tbody>
          <% @students.each do |student| %>
    <tr>
      <th scope='row'><%= image_tag student.photo.url(:thumb)%></th>
      <td><a href='/students/<%= student.id%>'><%=student.first_name%></a></td>
      <td><%=student.last_name%></td>
      <td><%=student.parent_first_name+ ' '+student.parent_last_name%></td>
      <td><%=student.current_school%></td>
      <td><%=student.grade_level%></td>
      <td><%=student.email%></td>

      <td><%= link_to "Edit", edit_student_path(student), :class=>"btn btn-success"%></td>
          <% student.users.each do |user|%>
      <td><%= user.first_name%></td>

          <% end %>

</td>
    </tr>
          <% end %>
  </tbody>
</table>



<div class="modal fade" id = 'new-student' tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Modal title</h4>
      </div>
      <div class="modal-body">


        <h1>Add New Students</h1>

              <%= form_for @student do |f| %>

              <div class='container'>

                    <div class='row'>
                        <div class='col-md-2'>
                          <%= f.label :first_name%>:
                        </div>

                        <div class='col-md-10'>
                              <%= f.text_field :first_name%><br />
                        </div>
                    </div>
                    <div class='row'>
                        <div class='col-md-2'>
                              <%= f.label :last_name%>:
                        </div>
                        <div class='col-md-10'>
                              <%= f.text_field :last_name%><br />
                        </div>
                    </div>
                    <div class='row'>
                        <div class='col-md-2'>
                            <%= f.label :parent_first_name%>:
                        </div>
                        <div class='col-md-10'>
                            <%= f.text_field :parent_first_name%><br />
                        </div>
                    </div>
                    <div class='row'>
                        <div class='col-md-2'>
                            <%= f.label :parent_last_name%>:
                        </div>
                        <div class='col-md-10'>
                            <%= f.text_field :parent_last_name%><br />
                        </div>
                    </div>
                    <div class='row'>
                        <div class='col-md-2'>
                            <%= f.label :email%>:
                        </div>
                        <div class='col-md-10'>
                            <%= f.text_field :email%><br />
                        </div>
                    </div>
                    <div class='row'>
                        <div class='col-md-2'>
                            <%= f.label :current_school%>:


                        </div>
                        <div class='col-md-10'>
                            <%= f.text_field :current_school%><br />
                        </div>
                    </div>
                    <div class='row'>
                        <div class='col-md-2'>
                            <%= f.label :grade_level%>:
                        </div>
                        <div class='col-md-10'>
                            <%= f.number_field :grade_level%><br />
                        </div>
                    </div>
                    <%= f.label :photo%>
                    <%= f.file_field :photo%>
                    <div class='form-actions'>
                      <%= f.submit "Enroll" %>
                    </div>
                    <% end %>


        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
